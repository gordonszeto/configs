{
    // Telemetry
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "telemetry.telemetryLevel": "off",

    // Settings Editor
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,
    "workbench.settings.openDefaultSettings": true,

    // Editor Behaviour
    "editor.tabCompletion": "on",
    "editor.cursorBlinking": "smooth",
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",
    "files.trimTrailingWhitespace": true,
    "editor.rulers": [
        80
    ],
    "editor.dragAndDrop": false,
    "editor.emptySelectionClipboard": false,

    // Local File History
    "workbench.localHistory.maxFileEntries": 100,
    "workbench.localHistory.maxFileSize": 512,
    "workbench.localHistory.mergeWindow": 60,

    "workbench.enableExperiments": false,
    "workbench.activityBar.visible": false,
    "problems.decorations.enabled": false,

    "explorer.autoReveal": false,
    "[python]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 4
    },
    "gitlens.views.fileHistory.location": "gitlens",
    "gitlens.views.compare.location": "gitlens",
    "gitlens.views.search.location": "gitlens",
    "gitlens.blame.avatars": false,
    "gitlens.blame.highlight.locations": [
        "gutter",
        "overview",
        "line"
    ],
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.currentLine.enabled": false,
    "extensions.autoUpdate": false,
    "python.venvPath": "~/.pyenvs",
    "editor.suggest.localityBonus": true,
    "python.linting.pylintArgs": [
        "--disable=all",
        "--enable=F,E,unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode",
        "--enable=variables,refactoring"
    ],
    "python.linting.pylintCategorySeverity.refactor": "Information",
    "editor.suggestSelection": "first",
    "[plaintext]": {
        "editor.autoClosingBrackets": "never",
    },
    "search.searchOnType": false,
    "timeline.excludeSources": [],
    "python.jediMemoryLimit": 2048,
    "python.experiments.enabled": false,
    "python.analysis.logLevel": "Trace",
    "python.analysis.cachingLevel": "Library",
    "python.downloadLanguageServer": true,
    "python.languageServer": "Pylance",
    "extensions.ignoreRecommendations": false,
    "python.showStartPage": false,
    "files.hotExit": "onExitAndWindowClose",

    "[go]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports": false,
        }
    },
    "go.buildOnSave": "package",
    "go.lintOnSave": "package",
    "go.vetOnSave": "off",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.editor.untitled.hint": "hidden",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "go.testFlags": [
        "-v"
    ],
}